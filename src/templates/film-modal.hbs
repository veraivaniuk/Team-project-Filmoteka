<div class='modal'>
  <div class='modal-container'>
    <img class='modal-image' src='{{poster}}' alt='{{title}}' />

    <div class='modal-info'>
      <h2 class='modal-info-title'>{{title}}</h2>
      <p class='modal-info-vote card-text'>
        Vote / Votes<span class='modal-info-vote-average'>{{vote}}</span>/<span
          class='modal-info-vote-count'
        >{{votes}}</span>
      </p>
      <p class='modal-info-popularity card-text'>
        Popularity<span class='modal-info-popularity-data'>{{popularity}}</span>
      </p>
      <p class='modal-info-title-original card-text'>
        Original Title<span class='modal-info-title-original-data'>{{title}}</span>
      </p>
      <div class='modal-info-genres'>
        <p class='modal-info-genres-text card-text'>
          Genre
        </p>
        <p class='modal-info-genres-text-list'>{{#each genres}}
            <span class='modal-info-genres-text-list-data'>{{this}}</span>
          {{/each}}
        </p>
      </div>
      <h3 class='modal-info-about'>About</h3>
      <p class='modal-info-description'>
        {{about}}
      </p>
      <div class='modal-info-buttons-list'>
        <button
          type='button'
          class='modal-info-buttons-list-item is-active-btn'
          id={{id}}
          data-action='watched'
        >Add to watched</button>
        <button type='button' class='modal-info-buttons-list-item' id={{id}} data-action='queue'>Add
          to queue</button>
        <button type='button' class='trailer-btn' id={{id}} data-action='trailer'></button>
      </div>
    </div>

    <button type='button' class='lightbox__button' data-action='close-lightbox'>&times</button>
  </div>
</div>
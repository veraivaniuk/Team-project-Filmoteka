{{#each this}}
  <div class='film-card' id='{{id}}'>
    <img src='https://image.tmdb.org/t/p/w500{{poster}}' alt='{{title}}' id='{{id}}' />

    <div class='description'>
      <span class='description-item'>
        {{title}}
      </span>
      <p class='genres-data-info'>
        <span>
          {{#each genres}}
            {{this}}{{#unless @last}},{{/unless}}

          {{/each}}
        </span>
        <span class='description-item'> &nbsp;| {{release}}</span>
        <span class = 'vote-item'>{{vote}}</span>
      </p>

    </div>
  </div>
{{/each}}